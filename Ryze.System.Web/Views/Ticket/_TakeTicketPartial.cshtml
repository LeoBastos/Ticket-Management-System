@using Ryze.System.Web.Models.Tickets
@model TicketViewModel


<form asp-action="TakeTicket" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ClientId" />
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ClientName" class="control-label"></label>
        <input asp-for="ClientName" type="text" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" type="text" class="form-control" readonly rows="5"></textarea>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-secondary">Assumir Ticket</button>
        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancelar</button>
    </div>

</form>