<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manager Tickets</title>

    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/kaiadmin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/plugins.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/demo.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/System.Tickets.Web.styles.css" asp-append-version="true" />

    <!-- Fonts and icons -->
    <script src="~/js/plugin/webfont/webfont.min.js"></script>
    <script>
        WebFont.load({
            google: { families: ["Public Sans:300,400,500,600,700"] },
            custom: {
                families: [
                    "Font Awesome 5 Solid",
                    "Font Awesome 5 Regular",
                    "Font Awesome 5 Brands",
                    "simple-line-icons",
                ],
                urls: ["@Url.Content("~/css/fonts.min.css")"],
            },
            active: function () {
                sessionStorage.fonts = true;
            },
        });
    </script>

</head>
<body>
    <div class="wrapper">
        @await Component.InvokeAsync("Sidebar")

        <div class="main-panel">
            <div class="main-header">
                <div class="main-header-logo">
                    <!-- Logo Header -->
                    <div class="logo-header" data-background-color="dark">
                        <a href="index.html" class="logo">
                            <img src="assets/img/kaiadmin/logo_light.svg"
                                 alt="navbar brand"
                                 class="navbar-brand"
                                 height="20" />
                        </a>
                        <div class="nav-toggle">
                            <button class="btn btn-toggle toggle-sidebar">
                                <i class="gg-menu-right"></i>
                            </button>
                            <button class="btn btn-toggle sidenav-toggler">
                                <i class="gg-menu-left"></i>
                            </button>
                        </div>
                        <button class="topbar-toggler more">
                            <i class="gg-more-vertical-alt"></i>
                        </button>
                    </div>
                    <!-- End Logo Header -->
                </div>
                @await Component.InvokeAsync("Navbar")
            </div>
            <div class="container">
                <div class="page-inner">
                    <div class="page-header">
                        <h4 class="page-title">Dashboard</h4>
                        @await Component.InvokeAsync("Breadcrumb", ViewData["Breadcrumbs"] as List<BreadcrumbItem>)
                    </div>
                    <div class="row">
                        <div class="col-md-8 col-sm-8 col-lg-8"></div>
                        <div class="col-md-4 col-sm-4 col-lg-4">
                            @await Component.InvokeAsync("Message", new { message = TempData["Message"] as string, success = TempData["Success"] as string, errors = TempData["Errors"] as string })
                        </div>
                    </div>
                    @RenderBody()
                </div>
            </div>
            @await Html.PartialAsync("~/Views/Shared/Components/Footer/_Footer.cshtml")
        </div>
    </div>

    <script src="~/js/core/jquery-3.7.1.min.js"></script>
    <script src="~/js/core/popper.min.js"></script>
    <script src="~/js/core/bootstrap.min.js"></script>
    <script src="~/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/js/plugin/sweetalert/sweetalert.min.js"></script>
    <script src="~/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>
    <script src="~/js/kaiadmin.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('#message-container .alert').alert('close');
            }, 2000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


