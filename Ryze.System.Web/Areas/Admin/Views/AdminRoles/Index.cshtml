@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "RyzeSystem";
}


<div class="col-md-6 col-lg-6">
    <a asp-action="Create" class="btn btn-secondary">Criar Role</a>
    <div class="card mt-3">
        <div class="card-header">
            <div class="card-title">Roles</div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td class="d-flex">
                                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Editar</a>
                                <form asp-action="Delete" asp-route-id="@role.Id" method="get">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Deletar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
